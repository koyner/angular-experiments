{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "mrb-logging": ["dist/mrb-logging"],
      "mrb-logging/*": ["dist/mrb-logging/*"],
      "mrb-ui": ["dist/mrb-ui"],
      "mrb-ui/*": ["dist/mrb-ui/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": true,
    "enableIvy": true
  }
}
