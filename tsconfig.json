{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es6",
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "mrb-logging": [
        "dist/mrb-logging",
        "dist/mrb-logging"
      ],
      "mrb-logging/*": [
        "dist/mrb-logging/*",
        "dist/mrb-logging/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": true,
    "enableIvy": true
  }
}
